{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/user/css/login.css') }}" />
{% endblock %}


{% block body %}
<section>
    <article class="login">
        <h1>Registration</h1>

        <form action="{{ path('user_register') }}" method="POST" novalidate>
            {{ form_errors(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email, { label : 'E-mail address'}) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            {{ form_rest(form) }}
            {{ form_row(form.save) }}
        </form>
    </article>
</section>
{% endblock %}